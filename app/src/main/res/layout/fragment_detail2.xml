<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.DetailFragment2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:id="@+id/video_container"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            app:layout_constraintBottom_toTopOf="@id/tv_film_name1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <VideoView
                android:id="@+id/iv_image_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/btn_fullscreen"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|bottom"
                android:layout_margin="10dp"
                android:src="@drawable/svgviewer_output"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <ImageView
                android:id="@+id/btm_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_chevron_svgrepo_com"
                android:padding="14sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        </FrameLayout>
       >
        <TextView
            android:id="@+id/tv_film_name1"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:text="Kino nomi bu yerda bolishi kerak"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/video_container"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            />



        <ImageView
            android:id="@+id/star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_star_rate_24"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="@id/tv_genre_detail"
            app:layout_constraintBottom_toBottomOf="@id/tv_genre_detail"
            app:layout_constraintStart_toStartOf="parent"
            />



        <TextView
            android:id="@+id/tv_rating_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/video_container"
            android:layout_marginStart="8dp"
            android:textColor="#FF9800"
            android:text="7.4"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="@id/star"
            android:fontFamily="@font/montserrat_semibold"
            app:layout_constraintTop_toTopOf="@id/star"
            app:layout_constraintStart_toEndOf="@id/star"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_genre_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="#9D9B9B"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toEndOf="@id/tv_rating_detail"
            app:layout_constraintTop_toBottomOf="@id/tv_film_name1"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/tv_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Based on the box office results for Avatar: The Way of
       Water, it's likely that James Cameron will able to make all of the
       Avatar movies he wants toâ€”and for better or worse, that is a lot of Avatar movies."
            app:layout_constraintTop_toBottomOf="@id/tv_genre_detail"
            android:paddingHorizontal="14sp"
            android:layout_marginTop="6sp"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_italic"
            android:textColor="#CAC7C7"
            android:maxLines="5"
            android:ellipsize="end"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_play"
            android:layout_width="200dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_info_title"
            android:layout_marginStart="20sp"
            android:background="@drawable/bg"
            android:layout_marginTop="10dp"
            android:text="Play"
            android:padding="8sp"
            android:textSize="12sp"
            android:paddingStart="40dp"
            android:shadowRadius="5"
            android:drawableStart="@drawable/play_alt_svgrepo_com"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_extrabold"
            />


        <ImageView
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/saved_svg1"
            android:paddingStart="8sp"
            android:layout_marginEnd="20sp"
            app:layout_constraintBottom_toBottomOf="@id/btn_play"
            app:layout_constraintTop_toTopOf="@id/btn_play"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_title5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recommend for you"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="8sp"
            android:layout_marginLeft="20sp"
            app:layout_constraintTop_toBottomOf="@id/btn_play"
            app:layout_constraintStart_toStartOf="parent"
            />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_datail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title5"
            tools:listitem="@layout/item_popular"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>






    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.core.widget.NestedScrollView>